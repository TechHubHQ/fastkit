[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "A FastAPI service generated by FastKit"
readme = "README.md"
requires-python = ">=3.12"
dependencies = [
    "fastapi[all]>=0.116",
    "uvicorn[standard]>=0.30",
    "pydantic-settings>=2.0.0",
    "pytest>=7.0.0",
    "pydantic>=2.0.0",
    "pytest-asyncio>=0.21.0",
{%- if db_choice != "none" %}
{%- if db_choice == "mongodb" %}
    "motor>=3.0.0",
{%- else %}
    "sqlalchemy>=2.0.0",
{%- if db_choice == "postgresql" %}
    "psycopg2-binary>=2.9.0",
{%- elif db_choice == "mysql" %}
    "pymysql>=1.1.0",
    "cryptography>=41.0.0",
{%- elif db_choice == "sqlite" %}
    # SQLite support is built into Python
{%- elif db_choice == "mssql" %}
    "pyodbc>=4.0.0",
{%- endif %}
{%- endif %}
{%- endif %}
{%- if cache_choice == "redis" %}
    "redis>=4.0.0",
{%- elif cache_choice == "memcached" %}
    "pymemcache>=4.0.0",
{%- elif cache_choice == "in-memory" %}
    "cachetools>=5.0.0",
{%- endif %}
{%- if auth_type == "jwt" %}
    "python-jose[cryptography]>=3.3.0",
    "passlib[bcrypt]>=1.7.4",
{%- elif auth_type == "oauth" %}
    "authlib>=1.2.0",
    "httpx>=0.24.0",
{%- endif %}
]

[tool.uv]
index-url = "https://pypi.org/simple"

[tool.fastkit]
project = true
generator = "fastkit"
schema = 1
